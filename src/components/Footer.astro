---
import { EMAIL_TEXT, GITHUB, LINKEDIN } from "../constants/links";
const date = new Date();
const year = date.getFullYear();
---

<footer class="border-t-1 mt-40 w-full">
  <section
    class="flex flex-col md:flex-row md:justify-between w-full layout-padding py-12 gap-8 md:gap-0"
  >
    <div class="flex flex-col gap-4">
      <p class="flex items-center gap-2 text-base">
        <span class="icon-[mdi--space-invaders]" role="img" aria-hidden="true"
        ></span>
        Cristian <span class="text-gray-400 ml-2 hidden md:inline"
          >{EMAIL_TEXT}</span
        >
      </p>
      FullStack Developer
    </div>
    <div class="flex flex-col text-xl">
      Media
      <div class="flex gap-2 mt-1">
        <a
          href={GITHUB}
          target="_blank"
          aria-label="Link cristian github"
          class="icon-[mdi--github] text-2xl hover:scale-105 hover:bg-secondary cursor-pointer transition-all"
        ></a>
        <a
          href={LINKEDIN}
          target="_blank"
          aria-label="Link cristian linkedin"
          class="icon-[mdi--linkedin] text-2xl hover:scale-105 hover:bg-secondary cursor-pointer transition-all"
        ></a>
      </div>
    </div>
  </section>
  <p class="flex justify-center text-gray-400 mb-12">
    Copyright {year}. Made by Cristian
  </p>
</footer>

